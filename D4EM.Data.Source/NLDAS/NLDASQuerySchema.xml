<DataExtension name='NLDASDataExtension'>
  <function name='GetNLDASParameter' label='NLDAS Precipitation'>
    <arguments>
      <Parameter format='string' label='Parameter to retrieve' optional='true' default='APREC' />
      <StartDate format='datestring' label='Starting date for values to retrieve' optional='true' default='1/1/1997' />
      <EndDate   format='datestring' label='Ending date for values to retrieve'   optional='true' default='1/1/2100' />
      <GridID    format='string' label='Grid ID'                               optional='false' multiple='true' />
      <SaveIn    format='folder' label='Save data in folder' filter='Text Files (*.txt)|*.txt' />
    </arguments>
    <returns>
    </returns>
  </function>
  <function name='GetNLDASGrid' label='NLDAS Stations'>
    <arguments>
      <region    format='Region'   label='Region to download' />
      <SaveAs    format='saveas'   label='Save grid as' filter='Shape File (*.shp)|*.shp' default='DefaultGridFilename'/>
    </arguments>
    <returns>
    </returns>
  </function>
</DataExtension>